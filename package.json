{
  "name": "@xyte-io/nodejs-agent",
  "version": "0.0.1",
  "description": "Xyte's agent implemented in NodeJS",
  "type": "module",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "build": "tsc",
    "run-js": "tsc && node ./lib/init.js",
    "bundle": "tsc --noEmit && node scripts/build.forever.js && node scripts/build.main.js",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "resolutions": {
    "glob-parent": "^6.0.1"
  },
  "dependencies": {
    "compare-versions": "4.1.3",
    "forever-monitor": "3.0.3",
    "isomorphic-fetch": "3.0.0"
  },
  "devDependencies": {
    "@tsconfig/node10": "1.0.9",
    "@tsconfig/node18": "1.0.1",
    "@types/isomorphic-fetch": "0.0.36",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "c8": "7.11.3",
    "esbuild": "0.14.47",
    "eslint": "8.17.0",
    "eslint-plugin-prettier": "4.0.0",
    "fetch-mock": "9.11.0",
    "lint-staged": "13.0.2",
    "prettier": "2.7.1",
    "typescript": "4.7.4",
    "vite": "2.9.13",
    "vitest": "0.17.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "lint-staged": {
    "src/**/*.{js,json,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": "=18.4.0",
    "npm": "=8.12.1"
  },
  "volta": {
    "node": "18.4.0",
    "npm": "8.12.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xyte-io/nodejs-agent.git"
  },
  "author": "Vladimir Okun <v@xyte.io> (https://xyte.io/)",
  "bugs": {
    "url": "https://github.com/xyte-io/nodejs-agent/issues"
  },
  "homepage": "https://github.com/xyte-io/nodejs-agent"
}
